 <style>  
.gallery{
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border-top-left-radius: 50px 50px;
    border-top-right-radius: 50px 50px;
    height: auto;
    background-color: #FFFFFF;
}
body{
    background-color: #000000;
    background-image: linear-gradient(315deg, #000000 0%, #7f8c8d 74%);
}
.glide__slide img{
    padding-top: 20%;
    padding-bottom: 10%;
    width: 100%;
    height: 100%;
}
.glide__slides{
    height: max-content;
}
.glide__slide{
   
    filter: blur(6px);
    opacity: .7;
    transition: .3s linear;
}
.glide__slide--active{
    opacity: 1;
    filter: none;
    z-index: 2;
    transform: scale(1.2);
}
.glide__slides{
    overflow: visible;
}
.card{
    box-shadow: rgba(0, 0, 255, 0.15) 0px 15px 25px, rgba(0, 0, 255, 0.05) 0px 5px 10px;
    border-bottom-left-radius: 50px 50px;
    border-bottom-right-radius: 50px 50px;
    border-top-left-radius: 100px 100px;
    border-top-right-radius: 100px 100px;
}
.card-body{
    font-family: '', sans-serif;
    font-size: xx-large;
}
.card-title{
    font-family: '', sans-serif;
    font-size: xx-large;
}
.navbar{
    height: calc( 100% + 50px);
    background-color: #166d3b;
    background-image: linear-gradient(147deg, #166d3b 0%, #000000 74%);
}
.navbar-brand{
    
    top: -4vh;
    font-family: 'Oswald', sans-serif;
   z-index: 1;
   font-size: 10rem;
}

@media screen and (min-width:0px) and (max-width:700px){
    .navbar{
        height: max-content;
    }
    .quote{
        display: none;
    }
    .navbar-brand{    
        top: 10vh;
        font-size: 5rem;
    }
    .quote{
        position: absolute;
        top:20vh
    }
}
@media screen and (min-width:700px) and (max-width:992px){
    .navbar{
        height: calc(100% + 40vh);
    }
    .navbar-brand{  
        top: 10vh;  
        font-size: 10rem;
    }
    .quote{
        top:30vh;
        display: none;
    }
}
.navbar-brand:hover{
    color: #fff;
    text-shadow: 0 0 20px #fff,
                 0 0 30px #fff,
                 0 0 40px #fff,
                 0 0 55px #fff;
                
                 
}
</style> 

